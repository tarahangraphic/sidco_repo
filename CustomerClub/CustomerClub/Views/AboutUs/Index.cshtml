
@{
    ViewBag.Title = "مدیریت بخش درباره ما";
    Layout = "~/Views/shared/_layout.cshtml";
}
@section viewsection{
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 260,
                minHeight: null,
                maxHeight: null,
                focus: true
            });


        });
    </script>
    <script>
        $('.click2edit').summernote({ focus: true });

    </script>
    <script src="~/Script/Pages/AboutUs.js"></script>
}

<div style="display:none;" id="Successful" class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true" style="font-size:20px">×</span>
    </button>
    <strong>موفق!</strong> عملیات با موفقیت انجام شد
</div>

<div style="display:none;" id="deleteinformation" class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true" style="font-size:20px">×</span>
    </button>
    <strong>حذف!</strong> حذف با موفقیت انجام شد
</div>

<div class="panel-body">
    <div class="row animatedParent animateOnce z-index-50">
        <div class="col-lg-12 animated fadeInUp animateOnce z-index-50">
            <h3 class="title">مدیریت بخش درباره ما</h3>
            <div class="panel panel-default animated fadeInUp">
                <div class="panel-heading clearfix">
                    <h3 id="TitlePage1"></h3>
                    <button style="margin-bottom:5px;" class="btn btn-blue" id="savenot">ذخیره</button>
                </div>
                <div class="panel-body">
                    <div id="div2note" style="background-color:lightgray;border:1px solid gray;" class="click2edit"></div>
                </div>
            </div>
        </div>
    </div>

    <div id="AboutUsregister">

    </div>
    <div id="AboutUsregisterlist">

    </div>
    <div class="row">
        <div class="col-lg-12 animatedParent animateOnce z-index-50">
            <div class="panel panel-default animated fadeInUp">
                <div class="panel-heading clearfix">
                    <h3 id="TitlePage"></h3>
                    <button style="margin-right:20px;margin-bottom:20px;" id="btnRegisterAboutUs" type="button" onclick="AboutUsregisterform.reset()" class="btn btn-primary" data-toggle="modal" data-target="#AboutUsregisterModal" data-backdrop="static">ثبت جدید</button>
                    <button style="margin-right:20px;margin-top:2px;" id="btnRegisterlist" type="button" onclick="AboutUsregisterlistform.reset()" class="btn btn-primary" data-toggle="modal" data-target="#AboutUsregisterlistModal" data-backdrop="static">ثبت جدید</button>
                    <button style="margin-right:700px;" id="btnReturn" type="button" class="btn btn-primary">بازگشت</button>
                </div>
                <div class="panel-body">
                    <div id="divaboutus" class="table-responsive">

                    </div>
                    <div id="divlistaboutus">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
